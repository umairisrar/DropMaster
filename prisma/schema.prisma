generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  asin        String   @unique
  title       String
  description String
  price       Float
  reviews     Json[]
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([id, asin])
}
